<% layout('layouts/boilerPlate') %>

<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" enctype="multipart/form-data"
            class="validating-form" novalidate>
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="campground[title]"
                    value="<%=campground.title%>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="campground[location]"
                    value="<%=campground.location%>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="campground[price]" value="<%=campground.price%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" id="description" rows="3" name="campground[description]"
                    required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <script>
                    // Get a reference to the textarea element
                    let textarea = document.getElementById('description');

                    // Set the initial value of the textarea
                    textarea.value = '<%=campground.description%>';
                </script>
            </div>

            <div class="mb-3">
                <label class="form-label" for="image">Upload Images</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>


            <div style="justify-content: space-between;">
                <div class="mb-3">
                    <h5 class="mt-4">Delete Photos</h5>

                    <% campground.images.forEach(function(img, i) { %>

                    <label class="image-checkbox-label">
                        <input type="checkbox" class="image-checkbox form-check-input" name="deleteImages[]"
                            value="<%= img.filename %>">
                        <img src="<%= img.thumbnail %>" class="img-thumbnail stretched-img" alt="">
                    </label>

                    <% }) %>

                </div>
            </div>
            <style>
                /* Add some CSS to style the image when the checkbox is checked */
                .image-checkbox-label {
                    cursor: pointer;
                    display: inline-block;
                    position: relative;
                    margin: 5px;
                    width: 45%;
                    /* Set a fixed width for the images */
                    height: 200px;
                    /* Set a fixed height for the images */
                    overflow: hidden;
                    /* Hide any overflow to maintain uniform size */
                }

                .image-checkbox-label .stretched-img {
                    /* Stretch the images to cover the fixed width and height */
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                    /* Add some styles to visually indicate when the image is selected */
                    border: 2px solid transparent;
                    transition: border-color 0.3s ease-in-out;
                }

                .image-checkbox:checked+.stretched-img {
                    /* Style the image when the checkbox is checked */
                    border-color: #555656;
                    /* You can use any color you like */
                    box-shadow: 0 0 20px #555656;
                    /* Add a box shadow to highlight the image */
                }

                /* Hide the default checkbox icon */
                .image-checkbox {
                    opacity: 0;
                    position: absolute;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                }
            </style>


            <div class="mb-3">
                <button class="btn btn-info">Update Campground</button>
            </div>
        </form>
    </div>
</div>

</form>